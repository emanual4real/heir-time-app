{
  // For more information, visit: https://go.microsoft.com/fwlink/?LinkId=733558
  "version": "2.0.0",
  "tasks": [
    {
      "label": "angular start",
      "type": "npm",
      "script": "start",
      "isBackground": true,
      "path": "./client",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "angular test",
      "type": "npm",
      "script": "test",
      "isBackground": true,
      "path": "./client",
      "problemMatcher": {
        "owner": "typescript",
        "pattern": "$tsc",
        "background": {
          "activeOnStart": true,
          "beginsPattern": {
            "regexp": "(.*?)"
          },
          "endsPattern": {
            "regexp": "bundle generation complete"
          }
        }
      }
    },
    {
      "label": "dotnet run",
      "command": "dotnet",
      "type": "process",
      "args": [
        "run",
        "--project=",
        "${workspaceFolder}/server/heir-time-api",
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "build",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/server/heir-time-api/heir-time-api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "publish",
      "command": "dotnet",
      "type": "process",
      "args": [
        "publish",
        "${workspaceFolder}/server/heir-time-api/heir-time-api.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary;ForceNoAlign"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": "watch",
      "command": "dotnet",
      "type": "process",
      "args": [
        "watch",
        "run",
        "--project",
        "${workspaceFolder}/server/heir-time-api/heir-time-api.csproj"
      ],
      "problemMatcher": "$msCompile"
    },
    {
      "label": ".NET Core Test with debugger",
      "type": "process",
      "isBackground": true,
      "command": "dotnet",
      "args": [
        "test"
      ],
      "options": {
        "cwd": "${workspaceFolder}/server/test/heir-time-api.Tests",
        "env": {
          "VSTEST_HOST_DEBUG": "1"
        },
      },
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
  ]
}